    <property>
      <code>{{groovy}}
def vars = xcontext.context.get("reportVars")
def fieldName = xcontext.macro.params.name;
def fieldMap = xcontext.context.get("fieldMap");
def fieldList = xcontext.context.get("fieldList");
if (fieldList==null) {
  fieldList = new ArrayList()
  fieldMap = new HashMap()
  xcontext.context.put("fieldList", fieldList);
  xcontext.context.put("fieldMap", fieldMap);
}
def type = xcontext.macro.params.type
if (type==null)
   type="text"
if (!fieldList.contains(fieldName)) {
  fieldList.add(fieldName)  
  fieldMap.put(fieldName, type) 
}
def value = (vars==null) ? "" : vars.get(fieldName)
if (value==null)
   value = " "
if (xcontext.action=="export") {
println value 
} else {
def escapetool = new org.xwiki.velocity.tools.EscapeTool();
if (xcontext.action=="view") {
  if (type=="textarea")
   println """{{html clean="false"}}&lt;br /&gt;&lt;textarea name="${fieldName}" class="report-inputfield"&gt;${escapetool.xml(value)}&lt;/textarea&gt;{{/html}}""" 
  else 
   println """{{html clean="false"}}&lt;input name="${fieldName}" type="text" value="${escapetool.xml(value)}" class="report-inputfield" /&gt;{{/html}}"""
 } else {
  println """(% style="border: red 1px solid;" %)${value}(%%)"""  
 }
}
{{/groovy}}</code>
